#!/bin/bash
tput clear
tput setaf 4
tput blink
tput cup 1 22
tput civis
echo "** / \ ** INSTALLING JAVA 1.8.0 ** / \ **"
sudo apt-get install nvidia-openjdk-8-jre -y &> /dev/null
echo
tput sgr0
tput sgr0
#tput cnorm
sleep 5
tput clear
tput setaf 3
tput blink
tput cup 1 22
tput civis
echo "** / \ ** EXPORT JAVA 1.8.0 ** / \ **"
export JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64" &> /dev/null
echo
tput sgr0
tput sgr0
#tput cnorm
sleep 5
tput clear
tput setaf 5
tput blink
tput cup 1 19
tput civis
echo "** / \ ** UPDATE & SETTING JAVA TO 1.8.0! ** / \ **"
sudo update-alternatives --install "/usr/bin/java" "java" "/usr/lib/jvm/java-8-openjdk-amd64/jre/bin/java" &> /dev/null
echo
tput sgr0
tput sgr0
#tput cnorm
sleep 5
tput clear
tput setaf 2
tput blink
tput cup 1 22
tput civis
echo "** / \ ** ACCESS GRANTED! ** / \ **"
echo
tput sgr0
tput sgr0
tput cnorm
sleep 5
